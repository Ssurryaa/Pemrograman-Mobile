                android:textColorHint="#808080"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_search"
                app:tint="@color/grey" />
        </FrameLayout>

